<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="3.0">
    <!-- declare servlets   -->
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>Controllers.ControllerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>Controllers.AreaCheckServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DataDeleteServlet</servlet-name>
        <servlet-class>Controllers.DataDeleterServlet</servlet-class>
    </servlet>


    <!-- connect url and servlets    -->
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/area_check</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DataDeleteServlet</servlet-name>
        <url-pattern>/clean</url-pattern>
    </servlet-mapping>
</web-app>
